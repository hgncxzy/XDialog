<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="184dp"
    android:background="@drawable/bg_bottom_alert_dialog"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="104dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_bottom_btn_alert_normal"
            android:text="按钮1"
            android:textColor="#333333"
            android:textSize="18dp"
            tools:ignore="ButtonStyle,HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="104dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_bottom_btn_alert_normal"
            android:text="按钮2"
            android:textColor="#333333"
            android:textSize="18dp"
            tools:ignore="ButtonStyle,HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="104dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_bottom_btn_alert_normal"
            android:text="按钮3"
            android:textColor="#333333"
            android:textSize="18dp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded,SpUsage" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg_bottom_btn_alert_focused"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="18dp"
        tools:ignore="HardcodedText,SpUsage" />


</LinearLayout>



